<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.developer.dup.sockettst.Config"
                android:id="@+id/GoBack"
                android:background="#1c1c1c">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSaveConfig"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/btnGoBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputName"
        android:textColor="#ffffff"
        android:textColorHint="#808080"
        android:hint="Your Name"
        android:layout_below="@+id/btnGoBack"
        android:layout_alignRight="@+id/btnGoBack"
        android:layout_alignEnd="@+id/btnGoBack"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputIp"
        android:textColor="#ffffff"
        android:textColorHint="#808080"
        android:hint="IP Server"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/inputName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usersOn"
        android:layout_below="@+id/inputIp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="#424242"
        android:spinnerMode="dialog"
        android:popupBackground="#9E9E9E"/>

</RelativeLayout>
